generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model BlogArticle {
  id          String   @id @default(cuid())
  externalId  String   @unique // JoinVoy article ID
  slug        String   @unique
  title       String
  description String?  @db.Text
  category    String?
  label       String?
  imageUrl    String?
  content     Json     // Store the full content compositions
  publishedAt DateTime?
  syncedAt    DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([category])
  @@map("blog_articles")
}
